{
  "name": "tiny-dom-notifier",
  "version": "0.1.2",
  "description": "Get notified when certain DOM elements are created or removed",
  "main": "index.js",
  "scripts": {
    "test": "node_modules/.bin/testling | node_modules/.bin/tspec",
    "bundle": "node_modules/.bin/browserify index.js -s tinyDomNotifier > dist/tinydomnotifier.js && echo 'Bundled'",
    "minify": "node_modules/.bin/uglifyjs dist/tinydomnotifier.js -o dist/tinydomnotifier.min.js -m && echo 'Minified'",
    "build": "npm test && npm run bundle && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scottcorgan/tiny-dom-notifier.git"
  },
  "keywords": [
    "dom",
    "notify",
    "notifier",
    "tiny"
  ],
  "author": "Scott Corgan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scottcorgan/tiny-dom-notifier/issues"
  },
  "devDependencies": {
    "tape": "~2.3.2",
    "testling": "~1.5.6",
    "tap-spec": "~0.1.3",
    "browserify": "~3.19.1",
    "uglify-js": "~2.4.8",
    "tiny-dom": "~0.1.0"
  },
  "testling": {
    "files": [
      "test/index.js"
    ],
    "browsers": [
      "iexplore/10.0",
      "iexplore/9.0",
      "iexplore/8.0",
      "firefox/16..latest",
      "chrome/22..latest",
      "safari/5.1..latest",
      "ipad/6.0..latest",
      "iphone/6.0..latest",
      "android-browser/4.2..latest"
    ]
  },
  "dependencies": {
    "raf-component": "~1.1.2",
    "tiny-element": "~0.1.3"
  }
}
